<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.firebase.udacity.friendlychat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PageIndexActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".PollDescriptionActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".SubscriptionListActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".SearchPollsActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".PollCreationActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity android:name=".Argument"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
    </application>

</manifest>